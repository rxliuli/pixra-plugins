{
  "id": "pixra.grok-edit",
  "name": "Grok Image Edit",
  "description": "AI-powered image editing using Grok AI API",
  "contributes": {
    "commands": [
      {
        "command": "grok-edit.editImage",
        "title": "Grok Edit Image",
        "enablement": "hasActiveTab"
      }
    ],
    "menus": {
      "tools": [
        {
          "command": "grok-edit.editImage"
        }
      ]
    },
    "configuration": {
      "title": "Grok Image Edit",
      "properties": {
        "grok-edit.apiKey": {
          "type": "string",
          "default": "",
          "description": "Grok AI API Key (from x.ai)"
        }
      }
    }
  },
  "permissions": [
    "fetch"
  ],
  "host_permissions": [
    "https://api.x.ai/*"
  ],
  "version": "0.0.2",
  "main": "plugin"
}